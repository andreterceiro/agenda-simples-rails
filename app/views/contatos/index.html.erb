<p id="notice"><%= notice %></p>

<h1>Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Observacoes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.idade %></td>
        <td><%= contato.telefone %></td>
        <td><%= contato.email %></td>
        <td><%= contato.observacoes %></td>
        <td><%= link_to 'Detalhes', contato %></td>
        <td><%= link_to 'Editar', edit_contato_path(contato) %></td>
        <td><%= link_to 'Apagar', contato, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_contato_path %>
